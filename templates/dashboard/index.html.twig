{% extends 'base.html.twig' %}

{% block title %}
  Hello DashboardController!
{% endblock %}

{% block content %}
  <!-- Page-Title -->
  <div class="row">
    <div class="col-sm-12">
      <h4 class="pull-left page-title">
        Dashboard
      </h4>
    </div>
  </div>

  <!-- Widget-4 -->
  <div class="row">
    <a href="{{ path('bien_index') }}" class="col-sm-6 col-lg-3">
      <div class="mini-stat clearfix bx-shadow bg-white">
        <span class="mini-stat-icon bg-info"><i class="fa fa-usd"></i></span>
        <div class="mini-stat-info text-right text-dark">
          <span class="counter text-dark">{{ totalBiens }}</span>
          Biens
        </div>
      </div>
    </a>
    <a href="{{ path('location_progess') }}" class="col-sm-6 col-lg-3">
      <div class="mini-stat clearfix bx-shadow bg-white">
        <span class="mini-stat-icon bg-warning">
          <i class="fa fa-shopping-cart"></i>
        </span>
        <div class="mini-stat-info text-right text-dark">
          <span class="counter text-dark">{{ totalLocations }}</span>
          Locations
        </div>
      </div>
    </a>
    <a href="{{ path('proprietaire_index') }}" class="col-sm-6 col-lg-3">
      <div class="mini-stat clearfix bx-shadow bg-white">
        <span class="mini-stat-icon bg-pink"><i class="fa fa-user"></i></span>
        <div class="mini-stat-info text-right text-dark">
          <span class="counter text-dark">{{ totalProprietaires }}</span>
          Propri√©taire
        </div>
      </div>
    </a>
    <div class="col-sm-6 col-lg-3">
      <div class="mini-stat clearfix bx-shadow bg-white">
        <span class="mini-stat-icon bg-success"><i class="fa fa-eye"></i></span>
        <div class="mini-stat-info text-right text-dark">
          <span class="counter text-dark">20544</span>
          Clients
        </div>
      </div>
    </div>
  </div> <!-- End row -->
{% endblock %}

{% block javascripts %}
  <script src="/assets/plugins/waypoints/lib/jquery.waypoints.js"></script>
  <script src="/assets/plugins/counterup/jquery.counterup.min.js"></script>

  <script type="text/javascript">
    jQuery(document).ready(function($) { /* Counter Up */
    $('.counter').counterUp({ delay: 100, time: 1200 });

    });
  </script>
{% endblock %}
