{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block content %}
   

    <div class="row">
        <div class="col-sm-12">
        <h4 class="pull-left page-title">
            Détail
        </h4>
        <ol class="breadcrumb pull-right">
            <li><a href="/">Accueil</a></li>
            <li><a href="{{ path('client_index') }}">Client</a></li>
            <li class="active">Détail</li>
        </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        <div class="panel panel-border panel-primary">
            <div class="panel-heading">
            <h3 class="panel-title">
                Détail du Client
            </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6"></div>
                    <div class="col-sm-6">
                        <div class="m-b-30 pull-right">
                            <a href="{{ path('client_index') }}"
                            class="btn btn-primary waves-effect waves-light">
                            Voir la liste
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ client.id }}</td>
                                </tr>
                                <tr>
                                    <th>Prénom</th>
                                    <td>{{ client.user.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ client.user.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ client.user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Nombre de locations</th>
                                    <td>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <a href="{{ path('client_location', {'id': client.id}) }}">
                                                    {{ client.location|length }}
                                                </a>
                                            </div>
                                            <div class="col-sm-6">
                                                <a class="btn btn-sm btn-warning pull-right" href="{{ path('client_location_new', {'id': client.id}) }}"><i class="fa fa-plus"></i></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <a class="btn btn-primary btn-block waves-effect waves-light" href="{{ path('client_edit', {'id': client.id}) }}">Modifier</a>
                    </div>
                </div>
            </div>
        </div>
        {{ include('client/_delete_form.html.twig') }}
    </div>

{% endblock %}
