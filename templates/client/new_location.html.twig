{% extends 'base.html.twig' %}

{% block title %}New Client{% endblock %}

{% block stylesheets %}

  <link href="/assets/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">
  <link href="/assets/plugins/select2/dist/css/select2.css" rel="stylesheet" type="text/css">
  <link href="/assets/plugins/select2/dist/css/select2-bootstrap.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}

    <div class="row">
    <div class="col-sm-12">
      <h4 class="pull-left page-title">
        Créer une location
      </h4>
      <ol class="breadcrumb pull-right">
        <li><a href="/">Accueil</a></li>
        <li><a href="{{ path('client_index') }}">Client</a></li>
        <li><a href="{{path('client_show', {id: client.id})}}">Détail</a></li>
        <li class="active">Créer une location</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-border panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            Formulaire de création d'une location
          </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
              <div class="m-b-30 pull-right">
                <a href="{{ path('client_index') }}"
                  class="btn btn-primary waves-effect waves-light">
                  Voir la liste
                </a>
              </div>
            </div>
        </div>
        {{ include('client/_form_location.html.twig') }}
    </div>
</div>
{% endblock %}

{% block javascripts %}

  <script type="text/javascript" src="/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
  <script src="/assets/plugins/select2/dist/js/select2.min.js" type="text/javascript"></script>

  <script>
      jQuery(document).ready(function() {

          jQuery('.datepicker').datepicker(
            {
              format: 'yyyy-mm-dd'
            }
          );

          jQuery(".select2").select2({
                    width: '100%'
                });
      });
  </script>

{% endblock %}