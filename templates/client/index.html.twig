{% extends 'base.html.twig' %}

{% block title %}
  Client index
{% endblock %}

{% block content %}

  <div class="row">
    <div class="col-sm-12">
      <h4 class="pull-left page-title">
        CLient
      </h4>
      <ol class="breadcrumb pull-right">
        <li><a href="/">Accueil</a></li>
        <li class="active">Client</li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-border panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            Liste des clients
          </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
              <div class="m-b-30 pull-right">
                <a href="{{ path('client_new') }}"
                  class="btn btn-primary waves-effect waves-light">
                  Créer <i class="fa fa-plus"></i>
                </a>
              </div>
            </div>
          </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>
                  Id
                </th>
                <th>
                  Prénom
                </th>
                <th>
                  Nom
                </th>
                <th>
                  Adresse
                </th>
                <th>
                  Email
                </th>
                <th>
                  actions
                </th>
              </tr>
            </thead>
            <tbody>
              {% for client in clients %}
                <tr>
                  <td>
                    {{ client.id }}
                  </td>
                  <td>
                    {{ client.user.prenom }}
                  </td>
                  <td>
                    {{ client.user.nom }}
                  </td>
                  <td>
                    {{ client.user.adresse }}
                  </td>
                  <td>
                    {{ client.user.email }}
                  </td>
                  <td>
                    <div class="row">
                      <div class="col-sm-6">
                        <a class="btn btn-success waves-effect waves-light btn-block"
                          href="{{
                          path(
                            'client_show',
                            {
                              id: client.id
                            }
                          )
                          }}">
                          Voir
                        </a>
                      </div>
                      <div class="col-sm-6">
                        <a class="btn btn-info waves-effect waves-light btn-block"
                          href="{{
                          path(
                            'client_edit',
                            {
                              id: client.id
                            }
                          )
                          }}">
                          Modifier
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="100%">
                    no records found
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
